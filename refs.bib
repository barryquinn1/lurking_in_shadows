title = {{An empirical analysis of the CO2 shadow price in Chinese thermal power enterprises}}, 
author = {Wei, Chu and Löschel, Andreas and Liu, Bing}, 
journal = {Energy Economics}, 
issn = {01409883}, 
doi = {10.1016/j.eneco.2013.05.018}, 
